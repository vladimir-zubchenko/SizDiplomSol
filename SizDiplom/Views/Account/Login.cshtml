@model SizDiplom.ViewModels.LoginModel


<div class="wrapper">

    <div id="sidebar" class="aside">
        <h2>Страница авторизации</h2>
        
    </div>
    <div id="article">
        <h2>Чтобы воспользоваться возможностями программы введите логин и пароль</h2>

        

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Login">место для логина</label><br />
                    <input type="text" asp-for="Login" /><br />
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">место для пароля</label><br />
                    <input asp-for="Password" /><br />
                    <span asp-validation-for="Password"></span>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <button type="submit" >АВТОРИЗОВАТЬСЯ</button>
                </div>
            </div>
        </form>
    </div>
</div>
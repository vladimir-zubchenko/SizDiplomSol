@model SizDiplom.ViewModels.RegisterModel

<div class="wrapper">

    <div id="sidebar" class="aside">
        <h2>Страница регистрации новых пользователей</h2>

    </div>
    <div id="article">
        <h2>Введите регистрационные данные ниже</h2>
        <h2>@ViewData["Warning"]</h2>

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class ="form-group">
                    <label asp-for="Login">Введите Ваш Логин</label><br />
                    <input type="text" asp-for="Login" /><br />
                    <span asp-validation-for="Login"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="TabNom">Введите Табельный номер</label><br />
                    <input type="text" asp-for="TabNom" /><br />
                    <span asp-validation-for="TabNom"></span>
                </div>
                <br />
                <div class="form-group">
                    <label for="DepartmentId">Выберите Департамент</label>
                    <select id="DepartmentId" name="DepartmentId">
                        @foreach (Department dep in Model.Departments)
                        {
                            <option value="@dep.Id">@dep.Name</option>
                        }
                    </select>                   
                </div>
                <br />
                <div class="form-group">
                    <label for="RoleName">Выберите Роль</label>
                    <select id="RoleName" name="RoleName">
                        @foreach (string rn in Model.Roles)
                        {
                            <option value="@rn">@rn</option>
                        }
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label><br />
                    <input asp-for="Password" /><br />
                    <span asp-validation-for="Password"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input asp-for="ConfirmPassword" /><br />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    
                    <input type="text" asp-for="ControllerName" value="@Model.ControllerName" /><br />
                    
                </div>
                <br />
                <br />
                <div>
                    <input type="submit" value="ЗАРЕГИСТРИРОВАТЬ" />
                    <br /> 
                    <br />
                </div>
            </div>
        </form>
        <form>
             <button asp-controller="@Model.ControllerName" asp-action="Index" formmethod="get">ВЫЙТИ БЕЗ ИЗМЕНЕНИЙ</button>
        </form>
        
    </div>
</div>
<h2>Возможные операции</h2>
<br />
<form id="deptadminMenuForm" method="post" asp-action="WhatCheck" asp-controller="DeptAdmin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>

        <div class="form-group">
            <label for="SizId">Выберите СИЗ:</label>
            <select id="SizId" name="SizId">

                @foreach (Siz siz in Model.sizsList)
                {
                    <option value="@siz.Id">@siz.TabNom ___ @siz.NextCheckDate.ToShortDateString() ___ @siz.Name</option>
                }

            </select>
            <br/>
            <button formaction="SelectedSiz" formmethod="post">Посмотреть/Изменить данные СИЗ</button>
            <br />
        </div>
        
        <br />
        <div class="form-group">
            <label for="UserId">Выберите Работника:</label>
            <select id="UserId" name="UserId">

                @foreach (User user in Model.usersList)
                {
                    <option value="@user.Id">@user.TabNom ___ @user.Login </option>
                }
             </select>
            <br />
            <button asp-action="UsersSizs" formmethod="post">Вывести список СИЗ работника</button>
            <button asp-action="ChangeUserF" formmethod="post">Изменить данные работника</button>
            <br />
        </div>
        <br />
        <div class ="form-group">
            <label for="PlaceId">Выберите Склад:</label>
            <select id="PlaceId" name="PlaceId">

                @foreach (Place pl in Model.placesList)
                {
                    <option value="@pl.Id">@pl.Name ___ @pl.Description </option>
                }
            </select>
            <br />
            <button asp-action="PlaceSizs" formmethod="post">Вывести список СИЗ склада</button>
            <button asp-action="ChangePlaceF" formmethod="post">Изменить данные склада</button>
            <br />
        </div>
        <br />
        <div class="form-group">
            <label for="CarId">Выберите Автомобиль:</label>
            <select id="CarId" name="CarId">

                @foreach (Car car in Model.carsList)
                {
                    <option value="@car.Id">@car.CarNomber ___ @car.Description</option>
                }
            </select>
            <br />
            <button asp-action="CarSizs" formmethod="post">Вывести список СИЗ автомобиля</button>
            <button asp-action="ChangeCarF" formmethod="post">Изменить данные автомобиля</button>
            <br />
        </div>
        <br />
        <div class=" form-group">
            <label for="CheckDate">Выберите дату следующей поверки СИЗ : </label>
                <input id="CheckDate" type="date" name="CheckDate"/>
            <br />
            <button formaction="CheckDateSizs" formmethod="post">Вывести список СИЗ по дате</button>
            <br />
        </div>
        
    
        <br />
        <div>
            <button asp-action="NewSizCreateF" formmethod="post">Добавить СИЗ</button>
            <button asp-action="Register" asp-controller="Account" formmethod="get">Добавить работника</button><br />
            <br />
            <button asp-action="NewPlaceCreate" formmethod="get">Добавить склад</button>
            <button asp-action="NewCarCreate" formmethod="get">Добавить автомобиль</button><br />
        </div>

    </div>
</form>

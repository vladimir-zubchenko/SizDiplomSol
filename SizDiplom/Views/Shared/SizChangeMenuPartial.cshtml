<h2>Возможные операции</h2>
<br />
<form id="sizChangeMenuForm" method="post" asp-action="" asp-controller="DeptAdmin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        
        <div class="form-group">
            <label for="UserId">Выберите Работника :  </label>
            <select id="UserId" name="UserId">

                @foreach (User user in Model.usersList)
                {
                    <option value="@user.Id">@user.TabNom ___ @user.Login </option>
                }
            </select>
            <br />
            <button formaction="SizsUserIdChange" formmethod="post">Распределить СИЗ работнику</button>
        </div>
        <br />

        <div class="form-group">
            <label for="PlaceId">Выберите Склад :  </label>
            <select id="PlaceId" name="PlaceId">

                @foreach (Place pl in Model.placesList)
                {
                    <option value="@pl.Id">@pl.Name ___ @pl.Description </option>
                }
            </select>
            <br />
            <button formaction="SizsPlaceIdChange" formmethod="post">Распределить СИЗ на склад</button>
        </div>
        <br />

        <div class="form-group">
            <label for="CarId">Выберите Автомобиль  :  </label>
            <select id="CarId" name="CarId">

                @foreach (Car car in Model.carsList)
                {
                    <option value="@car.Id">@car.CarNomber ___ @car.Description</option>
                }
            </select>
            <br />
            <button formaction="SizsCarIdChange" formmethod="post">Распределить СИЗ в автомобиль</button>        
        </div>
        <br />
        <div>
            <label for="SizId">Model.SizId</label>
            <input id="SizId" name="SizId" value="@Model.SizId"/>
        </div>
        <br />
        <div>

            <button formaction="SizsBelongDelete" formmethod="post">Вывести СИЗ из распределения</button><br />
            <button formaction="Index" formmethod="post">Выйти без изменений</button>
            
        </div>
       
    </div>
</form>

            <br />
            <button asp-action="SelectedSiz" formmethod="post">Посмотреть/Изменить данные СИЗ</button>
            <br />
        </div>

        <br />
        
        
        <br />
        <div class=" form-group">
            <label for="CheckDate">Выберите дату следующей поверки СИЗ : </label>
            <input id="CheckDate" type="date" name="CheckDate" />
            <br />
            <button asp-action="CheckDateSizs" formmethod="post">Вывести список СИЗ по дате</button>
            <br />
        </div>      
        

    </div>
</form>

@model SizDiplom.ViewModels.PlaceChangeViewModel

<div class="wrapper">

    <div id="sidebar" class="aside">
        <h2>Страница коррекции данных склада</h2>

    </div>

    <div id="article">
        <h2>Измените данные ниже</h2><br /><br />

        <form asp-action="ChangePlace" asp-controller="DeptAdmin" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <label asp-for="Name">Введите новое название склада</label><br />
                    <input type="text" asp-for="Name" /><br />
                    <span asp-validation-for="Name"></span>
                </div>
                <br />
                <div>
                    <label asp-for="Description">Введите новое описание склада</label><br />
                    <input type="text" asp-for="Description" /><br />
                    <span asp-validation-for="Description"></span>
                </div>
                <br />
                <div>
                    <label asp-for="DepartmentId">@Model.DepartmentId</label><br />
                    <input type="hidden" asp-for="DepartmentId" value="@Model.DepartmentId" /><br />
                    
                    <label asp-for="Id">@Model.Id</label><br />
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                </div>                
                <br />
                <br />
                <div>
                    <input type="submit" value="ИЗМЕНИТЬ ДАННЫЕ submit" />

                </div>
                <br />
                <br />
                <button asp-action="Index" formmethod="get">Выйти БЕЗ ИЗМЕНЕНИЙ</button>
                <br />
                <br />
                <button asp-action="DeletePlace" formmethod="post">УДАЛИТЬ ДАННЫЕ СКЛАДА</button>
            </div>
        </form>


    </div>
</div>